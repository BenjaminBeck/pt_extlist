<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE TSREF [

    <!ELEMENT TSREF (ENTRY)+>
    <!ELEMENT ENTRY (DESCRIPTION, DATATYPE*, POSIBLEVALUES*, DEFAULT*, STDWRAP*, PROTOTYPE*, EXAMPLE*, CHILDREN*, VARIANT* )>
    <!ELEMENT DESCRIPTION  (#PCDATA)>
    <!ELEMENT DATATYPE (#PCDATA)>
    <!ELEMENT PROTOTYPE (#PCDATA)>
    <!ELEMENT STDWRAP (#PCDATA)>
    <!ELEMENT EXAMPLE (#PCDATA)>
    <!ELEMENT DEFAULT (#PCDATA)>
    <!ELEMENT POSIBLEVALUES (#PCDATA)>
    <!ELEMENT CHILDREN (ENTRY*)>
    <!ELEMENT VARIANT (ENTRY*)>

    <!ATTLIST ENTRY KEY CDATA #REQUIRED>

]>

<TSREF>
    <ENTRY KEY="plugin.tx_ptextlist.settings">
        <DESCRIPTION>Main TS-key for all pt_extlist settings.</DESCRIPTION>
        <CHILDREN>
            <ENTRY KEY="listConfig">
                <DESCRIPTION>Holds configuration for all list identifiers configured by array key.</DESCRIPTION>
                <DATATYPE>Associative Array (listIdentifier => listConfiguration)</DATATYPE>
                <EXAMPLE></EXAMPLE>
                <CHILDREN>
                    <ENTRY KEY="&lt;yourListId&gt;">
                        <DESCRIPTION>Holds configuration for a single list identifier</DESCRIPTION>
                        <EXAMPLE>here comes some sample code</EXAMPLE>
                        
                        <CHILDREN>
	                    <ENTRY KEY="backendConfig">
	                        <DESCRIPTION>Holds the configuration for the used data backend.</DESCRIPTION>
	                        
	                        <VARIANT>
	                        	
	                        	<ENTRY KEY="backendConfig.mysql">
			                        <DESCRIPTION>Typo3 Backend. Inherits the Features from the MySql Backend but the datasource is already configured. The Typo3 Backend handles enableFields automatically in where clauses.</DESCRIPTION>
			                    	<PROTOTYPE>plugin.tx_ptextlist.prototype.backend.mysql</PROTOTYPE>
			                    	<CHILDREN>
			                    		<ENTRY KEY="datasource">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
			                    			<CHILDREN></CHILDREN>
			                    			<VARIANT></VARIANT>
			                    		</ENTRY>
			                    		
			                    		<ENTRY KEY="baseFromClause">
			                    			<DESCRIPTION>Holds the FROM clause of a mysql query without the FROM keyword.</DESCRIPTION>
			                    			<DATATYPE>String</DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>1</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE>
			                    				static_countries
												LEFT JOIN static_territories AS	st_subcontinent	ON (static_countries.cn_parent_tr_iso_nr = st_subcontinent.tr_iso_nr)
											</EXAMPLE>
			                    		</ENTRY>
			                    		
			                    		<ENTRY KEY="baseWhereClause">
			                    			<DESCRIPTION>Holds the WHERE clause of a mysql query without the WHERE keyword.</DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE>
			                    				st_continent.tr_name_en &lt;&gt; ''
			                    			</EXAMPLE>

			                    			<CHILDREN></CHILDREN>
			                    			<VARIANT></VARIANT>
			                    		</ENTRY>
			                    		
			                    		<ENTRY KEY="baseGroupByClause">
			                    			<DESCRIPTION>Holds the GROUP BY clause of a mysql query without the GROUP BY keyword.</DESCRIPTION>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<STDWRAP>1</STDWRAP>
			                    			<DATATYPE>String</DATATYPE>
			                    			<EXAMPLE>st_continent</EXAMPLE>
			                    		</ENTRY>
			                    	</CHILDREN>
			                    </ENTRY>
	                        	
	                        	<ENTRY KEY="backendConfig.typo3">
			                        <DESCRIPTION>Typo3 Backend. Inherits the Features from the MySql Backend but the datasource is already configured. The Typo3 Backend handles enableFields automatically in where clauses.</DESCRIPTION>
			                    	<PROTOTYPE>plugin.tx_ptextlist.prototype.backend.typo3</PROTOTYPE>
			                    </ENTRY>
			                    
			                    <ENTRY KEY="backendConfig.extbase">
			                        <DESCRIPTION>Typo3 Backend. Inherits the Features from the MySql Backend but the datasource is already configured. The Typo3 Backend handles enableFields automatically in where clauses.</DESCRIPTION>
			                    	<PROTOTYPE>plugin.tx_ptextlist.prototype.backend.extbase</PROTOTYPE>
			                    </ENTRY>
	                        </VARIANT>
	                    </ENTRY>
           		 		<ENTRY KEY="fields">
                   			<DESCRIPTION>Defines raw datasource fields, wich can than combined and processed in to table fields.</DESCRIPTION>
                   			<PROTOTYPE></PROTOTYPE>
                   			<STDWRAP>0</STDWRAP>
                   			<DATATYPE>Associative array</DATATYPE>
                   			<EXAMPLE></EXAMPLE>
                   			<CHILDREN>
                   				<ENTRY KEY="&lt;yourFieldId&gt;">
                   					<DESCRIPTION>Named definition of a single data field.</DESCRIPTION>
                   					<EXAMPLE>
	                   					name_local {
											table = static_countries
											field = cn_short_local
											isSortable = 1
										}
                   					</EXAMPLE>
                   					<CHILDREN>
                   						<ENTRY KEY="table">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="field">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="special">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="isSortable">
					                    	<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="accessGroups">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="expandGroupRows">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE></DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
                   					</CHILDREN>
                   				</ENTRY>
                   			</CHILDREN>
                   		</ENTRY>
               		 	<ENTRY KEY="columns">
							<DESCRIPTION>Holds the tables column definitions.</DESCRIPTION>
							<PROTOTYPE></PROTOTYPE>
							<STDWRAP>0</STDWRAP>
							<DATATYPE>Array</DATATYPE>
							<EXAMPLE></EXAMPLE>
							<CHILDREN>
								<ENTRY KEY="10,20,30">
									<CHILDREN>
										<ENTRY KEY="fieldIdentifier">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="isSortable">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="label">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="renderUserFunctions">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="renderTemplate">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="renderObj">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="sorting">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="sortingImageAsc">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="sortingImageDesc">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="sortingImageDefault">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="accessGroups">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="cellCSSClass">
											<DESCRIPTION></DESCRIPTION>
											<PROTOTYPE></PROTOTYPE>
											<STDWRAP>0</STDWRAP>
											<DATATYPE></DATATYPE>
											<EXAMPLE></EXAMPLE>
										</ENTRY>
									</CHILDREN>
								</ENTRY>
							</CHILDREN>
						</ENTRY>
               		 	<ENTRY KEY="aggregateData">
               		 		<DESCRIPTION>Defines aggregates of data fields.</DESCRIPTION>
                   			<PROTOTYPE></PROTOTYPE>
                   			<STDWRAP>0</STDWRAP>
                   			<DATATYPE>Associative array</DATATYPE>
                   			<EXAMPLE></EXAMPLE>
               		 		<CHILDREN>
               		 			<ENTRY KEY="&lt;yourAggregateFieldId&gt;">
                   					<DESCRIPTION>Named definition of a single data field.</DESCRIPTION>
                   					<DATATYPE>Associative array</DATATYPE>
                   					<POSIBLEVALUES></POSIBLEVALUES>
                   					<DEFAULT></DEFAULT>
			                    	<STDWRAP>0</STDWRAP>
                   					<PROTOTYPE></PROTOTYPE>
		                   			
                   					<EXAMPLE>
	                   					sumPhone {
							        		fieldIdentifier = phone
							        		method = sum
							        		scope = query
							        	}
                   					</EXAMPLE>
                   					<CHILDREN>
                   						<ENTRY KEY="fieldIdentifier">
			                    			<DESCRIPTION></DESCRIPTION>
			                    			<DATATYPE>String</DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="method">
											<DESCRIPTION>Defined aggregate methods.</DESCRIPTION>
			                    			<DATATYPE>String</DATATYPE>
			                    			<POSIBLEVALUES>min,max,sum,avg</POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
			                    			<EXAMPLE></EXAMPLE>
										</ENTRY>
										<ENTRY KEY="scope">
											<DESCRIPTION>The scope for the aggregation can be either set to the current page or to the whole query. Aggregates for the current page are calculated internally without an additonal database query.</DESCRIPTION>
			                    			<DATATYPE>String</DATATYPE>
			                    			<POSIBLEVALUES>page,query</POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
										</ENTRY>
										<ENTRY KEY="special">
											<DESCRIPTION>Insert a individual SQL snippet.</DESCRIPTION>
			                    			<DATATYPE>String</DATATYPE>
			                    			<POSIBLEVALUES></POSIBLEVALUES>
			                    			<DEFAULT></DEFAULT>
			                    			<STDWRAP>0</STDWRAP>
			                    			<PROTOTYPE></PROTOTYPE>
										</ENTRY>
                   					</CHILDREN>
                   				</ENTRY>
               		 		</CHILDREN>
               		 	</ENTRY>
               		 	<ENTRY KEY="aggregateRows">
							<DESCRIPTION>Holds the aggregates columns definitions.</DESCRIPTION>
							<DATATYPE>Associative array</DATATYPE>
							<POSIBLEVALUES>All columnIdentifiers</POSIBLEVALUES>
							<DEFAULT></DEFAULT>
							<STDWRAP></STDWRAP>
							<PROTOTYPE></PROTOTYPE>
							<EXAMPLE></EXAMPLE>
							<CHILDREN>
								<ENTRY KEY="&lt;yourColumnId&gt;">
									<DESCRIPTION></DESCRIPTION>
									<DATATYPE></DATATYPE>
									<POSIBLEVALUES></POSIBLEVALUES>
									<DEFAULT></DEFAULT>
									<STDWRAP></STDWRAP>
									<PROTOTYPE></PROTOTYPE>
									<EXAMPLE></EXAMPLE>
									<CHILDREN>
										<ENTRY KEY="aggregateDataIdentifier">
											<DESCRIPTION></DESCRIPTION>
											<DATATYPE>String</DATATYPE>
											<POSIBLEVALUES></POSIBLEVALUES>
											<DEFAULT></DEFAULT>
											<STDWRAP></STDWRAP>
											<PROTOTYPE></PROTOTYPE>
											<EXAMPLE></EXAMPLE>
											<CHILDREN></CHILDREN>
											<VARIANT></VARIANT>
										</ENTRY>
									</CHILDREN>
									<VARIANT></VARIANT>
								</ENTRY>
							</CHILDREN>
							<VARIANT></VARIANT>
						</ENTRY>
               		 	<ENTRY KEY="filters">
							<DESCRIPTION>Holds all filterbox configurations.</DESCRIPTION>
							<DATATYPE>Associative array</DATATYPE>
							<POSIBLEVALUES></POSIBLEVALUES>
							<DEFAULT></DEFAULT>
							<STDWRAP></STDWRAP>
							<PROTOTYPE></PROTOTYPE>
							<EXAMPLE></EXAMPLE>
							<CHILDREN>
								<ENTRY KEY="&lt;yourFilterBoxId&gt;">
									<DESCRIPTION></DESCRIPTION>
									<DATATYPE></DATATYPE>
									<POSIBLEVALUES></POSIBLEVALUES>
									<DEFAULT></DEFAULT>
									<STDWRAP></STDWRAP>
									<PROTOTYPE></PROTOTYPE>
									<EXAMPLE></EXAMPLE>
									<CHILDREN>
										<ENTRY KEY="filterConfigs">
											<DESCRIPTION>Holds the configuration of the filters of this filter box.</DESCRIPTION>
											<DATATYPE>Array</DATATYPE>
											<POSIBLEVALUES>10,20,30...</POSIBLEVALUES>
											<DEFAULT></DEFAULT>
											<STDWRAP></STDWRAP>
											<PROTOTYPE></PROTOTYPE>
											<EXAMPLE></EXAMPLE>
											<CHILDREN>
												
											</CHILDREN>
											<VARIANT></VARIANT>
										</ENTRY>
									</CHILDREN>
									<VARIANT></VARIANT>
								</ENTRY>
							</CHILDREN>
							<VARIANT></VARIANT>
						</ENTRY>
               		 	</CHILDREN>
                    </ENTRY>
                </CHILDREN>
            </ENTRY>
        </CHILDREN>
    </ENTRY>
</TSREF>
